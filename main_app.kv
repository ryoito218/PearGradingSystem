Root_Layout:
    cols: 2
    rows: 2

    BoxLayout:
        orientation: 'horizontal'
        size: root.size

        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.7, 1
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.9
                
                CameraView:
                    id: camera_view
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.1
                Button:
                    id: main_button
                    text: "Execution"
                    on_press: root.evaluate()

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.3, 1
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.5
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: 0.1
                    Label:
                        id: navigation_title
                        text: 'Navigation'
                        font_size: '20sp'
                        color: (0, 0, 1, 1)
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: 0.9
                    Label:
                        id: navigation
                        text: 'Please execute'
                        font_size: '30sp'
                        color: (0, 0, 1, 1)
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.5
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: 0.1
                    Label:
                        id: result_title
                        text: 'Result'
                        font_size: '20sp'
                        color: (0, 0, 1, 1)
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: 0.9
                    Label:
                        id: result
                        text: ''
                        font_size: '30sp'
                        color: (0, 0, 1, 1)
